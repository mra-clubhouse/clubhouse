.has-background-light
  .container

    .navbar.has-background-light
      .navbar-start
      .navbar-end
        .navbar-item
          = link_to 'New Post', new_post_path, class: 'button is-success'

    - @posts.each do |post|
      .card.mb-5
        .card-content
          = link_to post do
            %h2.title.is-5= post.title
          %p
            %span.tag.is-normal.is-link.mt-3.mb-3.mr-3
              = post.user.username
            %span.icon-text.mt-3
              %span.icon
                %i.far.fa-comment
              %span
                = post.comments.count
                replies
          %p= post.body
