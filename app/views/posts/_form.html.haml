= form_for @post, data: { remote: true } do |f|
  - if @post.errors.any?
    = render partial: "shared/form_errors", locals: { object: @post }

  .field
    = f.label :title, class: "label"
    = f.text_field :title, class: "input"
  .field
    = f.label :body, class: "label"
    = f.text_area :body, class: "input textarea", rows: 5
  .actions
    = button_tag class: "button is-success", type: "submit", name: "commit", value: "Submit" do
      %span.icon
        %i.far.fa-paper-plane
      %span Submit
